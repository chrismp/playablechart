{
  "name": "Autotune playable table",
  "description": "Playable chart",
  "instructions": "",
  "type": "app",
  "tags": ["Example"],
  "thumbnail": "thumbnail.png",
  "authors": ["Kavya Sukumar <kavya.sukumar@voxmedia.com>"],
  "form": {
    "schema": {
      "title": "Autotune playable chart",
      "type": "object",
      "properties": {     
        "customColor": {
          "title": "Custom Color",
          "type": "string",
          "default": "#292929",
          "dependencies": "theme"
        },
        "google_doc_url": {
          "title": "Google spreadsheet URL",
          "description": "Enter spreadsheet URL",
          "format": "uri",
          "required": true
        },
        "y_axis_min":{
          "title": "Add min value for y axis",
          "required":true,
          "default": 0
        },
        "y_axis_max":{
          "title": "Add max value for y axis"
        },
        "audio_file_url": {
          "title": "Google spreadsheet URL",
          "description": "Enter spreadsheet URL",
          "format": "uri",
          "required": true
        },
        "tweet_text":{
          "title": "Tweet Text",
          "description": "text for twitter",
          "type": "string",
          "required": false
        }
      }
    },
    "options": {
      "fields": {
        "google_doc_url": {
          "type": "url"
        },
        "customColor": {
          "helper":"Color for custom theme",  
          "dependencies": {
            "theme": "custom"
          }
        }
      }
    }
  }
}
