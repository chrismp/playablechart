// Mixins
@import 'compass';
@import 'compass/reset';
@import 'fonts';


@import "compass/css3/transition";
@import 'bootstrap';

@import '<%= data.autotune.theme %>-vars';


$twitter: #00ACEE;
$facebook: #3B5998;
$gplus: #D34836;


$transparent : rgba(0,0,0,00);

 body, html{
  background-color: $background-color;
  height: auto;
}

svg, .stacker{
  margin: auto;
  display: block;
  padding-left: 20px;
  margin-bottom: 10px;
}

#topper{
  background-color: $highlight-color;
}


rect.curtain{
  fill: $background-color;
}

 path.line {
  fill: none;
  stroke: $chart-color;
  stroke-width: 3px;
}

path.area {
  fill: $background-color;
}

.axis {
  shape-rendering: crispEdges;
}

.axis line, .axis path {
  fill: none;
  stroke: $background-color;
}
.x.axis .minor {
  stroke-opacity: .5;
}

.x.axis path {
  display: none;
}


line.horizontalGrid{
  stroke: rgba($text-color, .1);
}

circle.dot{
  stroke: $highlight-color;
  fill: $background-color;
  &.highlight{
    fill: $highlight-color;
  }
}


.tooltip {
  width: 200px;
  font-size: 0.9em;
  color: $text-color;
  padding: 1em;
  border-radius: 0.4em;
}

.dot{
  cursor: pointer;
}

#topper {
  background-color:$topper-bgcolor;
  h2{
    width:80%;
    display: inline-block;
  }
.btn.btn-primary{
  display: inline-block;
  background-color:$chart-color;
  background-repeat: no-repeat;
  background-size: 20px 20px;
  background-position: 10px;
  width: 100px;
  height: 30px;
  border-radius: 3px;
  border: none;
  padding-left: 22px;
  &.startState {
    background-image: url('../images/play.png');
    span{
      border: none;
    }
  }
  &.playState {
    background-image: url('../images/sound.png');
  }
  span{
    width: 20px;
    height: 20px;
    padding-bottom: 2px;
    border-left: 2px lighten($chart-color,30%) solid;
    padding-left: 5px;
  }
}
}
#credits{
  float:left;
}
#social-media{
  float:right;
  ul{
    li{
      display: inline-block;
      a, a:hover{
        text-decoration: none;

      }
      a.icon-twitter{
        color:$twitter;
      }
      a.icon-facebook{
        color:$facebook;
      }
      a.icon-gplus{
        color:$gplus;
      }
    }
  }
}
