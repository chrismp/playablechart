// Mixins
@import 'compass';
@import 'compass/reset';


@import "compass/css3/transition";
@import 'bootstrap';


 $chart-color: #f6901e;

 $transparent : rgba(0,0,0,00);

 path.line {
  fill: none;
  stroke: $chart-color;
  stroke-width: 3px;
}

path.area {
  fill: #e7e7e7;
}

.axis {
  shape-rendering: crispEdges;
}

.x.axis line {
  stroke: #fff;
}

.x.axis .minor {
  stroke-opacity: .5;
}

.x.axis path {
  display: none;
}

.y.axis line, .y.axis path {
  fill: none;
  stroke: #666;
}

.tooltip {
  max-width: 16em;
  font-size: 0.9em;
  background: rgba(199, 238, 242, 0.75);
  color: #4c4d4e;
  padding: 1em;
  border-radius: 0.4em;
}

.btn.btn-primary{
  background-color:$chart-color;
  background-repeat: no-repeat;
  background-size: 20px 20px;
  background-position: 10px;
  width: 100px;
  height: 30px;
  border-radius: 3px;
  border: none;
  padding-left: 22px;
  &.startState {
    background-image: url('../images/play.png');
    span{
      display: none;
    }
  }
  &.playState {
    background-image: url('../images/sound.png');
  }
  span{
    width: 20px;
    height: 20px;
    padding-bottom: 2px;
    border-left: 2px lighten($chart-color,30%) solid;
    padding-left: 5px;
  }
}
