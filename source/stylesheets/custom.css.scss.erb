// Mixins
@import 'compass';
@import 'compass/reset';


@import "compass/css3/transition";
@import 'bootstrap';


 $chart-color: #f6901e;

 $transparent : rgba(0,0,0,00);

 path.line {
  fill: none;
  stroke: $chart-color;
  stroke-width: 3px;
}

path.area {
  fill: #e7e7e7;
}

.axis {
  shape-rendering: crispEdges;
}

.x.axis line {
  stroke: #fff;
}

.x.axis .minor {
  stroke-opacity: .5;
}

.x.axis path {
  display: none;
}

.y.axis line, .y.axis path {
  fill: none;
  stroke: #666;
}

.tooltip {
  max-width: 16em;
  font-size: 0.9em;
  background: rgba(199, 238, 242, 0.75);
  color: #4c4d4e;
  padding: 1em;
  border-radius: 0.4em;
}

.btn.btn-primary{
  background-color:$chart-color;
  &.startState {
    background-image: url('../images/middleman.png');
  }
}
