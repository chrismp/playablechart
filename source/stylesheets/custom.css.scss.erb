// Mixins
@import 'compass';
@import 'compass/reset';


@import "compass/css3/transition";
@import 'bootstrap';

@import "vox-vars";

 $chart-color: #f6901e;
 $text-color: #4c4d4e;
 $highlight-color: #c7eef2;
 $background-color: #f9f9f9;

 $transparent : rgba(0,0,0,00);

 body, html{
  background-color: $background-color;
  height: auto;
}

svg, .stacker{
  margin: auto;
  display: block;
  padding-left: 20px;
  margin-bottom: 10px;
}

#topper{
  background-color: $highlight-color;
}


rect.curtain{
  fill: $background-color;
}

 path.line {
  fill: none;
  stroke: $chart-color;
  stroke-width: 3px;
}

path.area {
  fill: $background-color;
}

.axis {
  shape-rendering: crispEdges;
}

.axis line, .axis path {
  fill: none;
  stroke: $background-color;
}
.x.axis .minor {
  stroke-opacity: .5;
}

.x.axis path {
  display: none;
}


line.horizontalGrid{
  stroke: rgba($text-color, .1);
}


.tooltip {
  max-width: 16em;
  font-size: 0.9em;
  background: rgba($highlight-color, 0.85);
  color: $text-color;
  padding: 1em;
  border-radius: 0.4em;
}

#topper {
  h2{
    width:80%;
    display: inline-block;
  }
.btn.btn-primary{
  display: inline-block;
  background-color:$chart-color;
  background-repeat: no-repeat;
  background-size: 20px 20px;
  background-position: 10px;
  width: 100px;
  height: 30px;
  border-radius: 3px;
  border: none;
  padding-left: 22px;
  &.startState {
    background-image: url('../images/play.png');
    span{
      border: none;
    }
  }
  &.playState {
    background-image: url('../images/sound.png');
  }
  span{
    width: 20px;
    height: 20px;
    padding-bottom: 2px;
    border-left: 2px lighten($chart-color,30%) solid;
    padding-left: 5px;
  }
}
}
